# Database connection
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/payday?schema=public"

# Server configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Email Configuration (Gmail)
# To use Gmail, you need to:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use that App Password here (not your regular Gmail password)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Twilio Configuration
# Sign up at https://www.twilio.com and get your credentials
# You can use the same Account SID and Auth Token for WhatsApp, SMS, and Voice
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token

# WhatsApp (requires WhatsApp Sandbox or Business API setup)
TWILIO_WHATSAPP_NUMBER=+14155238886

# SMS (requires a Twilio phone number with SMS capability)
TWILIO_SMS_NUMBER=+1234567890

# Voice Calls (requires a Twilio phone number with Voice capability)
TWILIO_VOICE_NUMBER=+1234567890

# Base URL for webhooks (optional)
# Only needed if you want to receive status callbacks from Twilio
# Must be a publicly accessible URL (not localhost)
# BASE_URL=https://your-domain.com

# Google Gemini Configuration
# Sign up at https://aistudio.google.com and get your API key
# Used for natural language queries about the data
GEMINI_API_KEY=your-gemini-api-key